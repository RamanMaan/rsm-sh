---
type Props = {
  class?: string;
};

const { class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  class:list={["stroke-2 fill-none stroke-current size-[1.125em]", className]}
>
  <line
    x1="5"
    y1="12"
    x2="19"
    y2="12"
    class="translate-x-3 group-hover:translate-x-0 group-focus:translate-x-0 scale-x-0 group-hover:scale-x-100 group-focus:scale-x-100 transition-transform duration-200 ease-in-out"
  ></line>
  <polyline
    points="12 5 19 12 12 19"
    class="-translate-x-1 group-hover:translate-x-0 group-focus:translate-x-0 transition-transform duration-200 ease-out"
  ></polyline>
</svg>
